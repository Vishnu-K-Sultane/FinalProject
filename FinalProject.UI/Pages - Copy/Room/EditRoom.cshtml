@page
@using FinalProject.UI.Pages.Rooms
@model EditRoomModel
@{
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>

<form method="post">
    <input type="hidden" asp-for="RoomId" />

    <div class="mb-3">
        <label for="RoomNumber" class="form-label">Room Number</label>
        <input type="text" class="form-control" asp-for="RoomNumber" />
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" />
    </div>

    <div class="mb-3">
        <label for="BedType" class="form-label">Bed Type</label>
        <select class="form-select" asp-for="BedType">
            <option value="Single" selected="@Model.BedType == BedType.Single">Single</option>
            <option value="Double" selected="@Model.BedType == BedType.Double">Double</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Room</button>
</form>
