@page
@using FinalProject.UI.Pages.DashBoard
@model FrontDeskModel
@{
    ViewData["Title"] = "Receptionist Summary";
}

<div class="text-center mb-5">
    <h2 class="text-primary">👩‍⚕️ Receptionist Dashboard</h2>
    <p class="lead text-muted">Quick overview of available front desk features</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-primary">Front Desk Features</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">➕ Add new patients with ID and admission details</li>
                    <li class="list-group-item">📋 View and manage patient records</li>
                    <li class="list-group-item">✏️ Update patient room and billing information</li>
                    <li class="list-group-item">🚪 Discharge patients with proper records</li>
                    <li class="list-group-item">🛏️ Check room availability and pricing</li>
                    <li class="list-group-item">🏬 View departments and HOD info</li>
                    <li class="list-group-item">👥 View all hospital employees</li>
                    <li class="list-group-item">🚑 Search ambulance availability</li>
                </ul>
            </div>
        </div>
    </div>
</div>
