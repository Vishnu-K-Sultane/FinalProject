@using FinalProject.Shared
@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<h3>Departments</h3>
<a class="btn btn-success mb-3" asp-controller="Department" asp-action="CreateDepartment">➕ Add Department</a>
<table class="table">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>HOD Name</th>
            <th>Phone Extension No</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.DeptName</td>
                <td>@dept.HODName</td>
                <td>@dept.PhoneExtensionNo</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="EditDepartment" asp-route-id="@dept.DepartmentId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="DeleteDepartment" asp-route-id="@dept.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
