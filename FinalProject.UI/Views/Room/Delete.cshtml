@model FinalProject.UI.RoomDto

@{
    ViewData["Title"] = "Delete Room";
}

<h3>Delete Room</h3>

<h5>Are you sure you want to delete this room?</h5>

<div>
    <dl class="row">
        <dt class="col-sm-3">Room Number</dt>
        <dd class="col-sm-9">@Model.RoomNumber</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price</dd>

        <dt class="col-sm-3">Bed Type</dt>
        <dd class="col-sm-9">@Model.BedType</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="RoomId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
