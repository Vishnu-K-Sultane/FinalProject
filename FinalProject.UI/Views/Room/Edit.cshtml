@model FinalProject.UI.RoomDto

@{
    ViewData["Title"] = "Edit Room";
}

<h3>Edit Room</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoomId" />

    <div class="form-group mb-3">
        <label asp-for="RoomNumber" class="form-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="BedType" class="form-label"></label>
        <select asp-for="BedType" class="form-control" asp-items="Html.GetEnumSelectList<FinalProject.UI.BedType>()"></select>
        <span asp-validation-for="BedType" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
