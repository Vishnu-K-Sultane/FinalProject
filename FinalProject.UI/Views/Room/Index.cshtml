@model IEnumerable<FinalProject.UI.RoomDto>

@{
    ViewData["Title"] = "Rooms";
}

<h3>Rooms</h3>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Room</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Price</th>
            <th>Bed Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Price</td>
                <td>@room.BedType</td>
                <td>
                    <a asp-action="Details" asp-route-id="@room.RoomId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@room.RoomId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@room.RoomId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
