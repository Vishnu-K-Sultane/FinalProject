@model IEnumerable<FinalProject.UI.Models.Ambulance>
@{
    ViewData["Title"] = "Ambulances";
}

<h2>Ambulance List</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Add New Ambulance</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Vehicle Number</th>
            <th>Vehicle Type</th>
            <th>Driver Name</th>
            <th>Mobile Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var amb in Model)
        {
            <tr>
                <td>@amb.VehicleNumber</td>
                <td>@amb.VehicleType</td>
                <td>@amb.DriverName</td>
                <td>@amb.MobileNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@amb.AmbulanceId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@amb.AmbulanceId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@amb.AmbulanceId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
