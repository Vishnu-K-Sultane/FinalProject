@model FinalProject.UI.Models.Ambulance

<h2>Delete Ambulance</h2>
<p>Are you sure you want to delete this record?</p>

<div>
    <strong>Vehicle Number:</strong> @Model.VehicleNumber
</div>
<div>
    <strong>Driver Name:</strong> @Model.DriverName
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="AmbulanceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
