@model FinalProject.UI.PatientDto

@{
    ViewData["Title"] = "Delete Patient";
}

<h3>Are you sure you want to delete this patient?</h3>
<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-3">Mobile</dt>
    <dd class="col-sm-9">@Model.MobileNumber</dd>

    <dt class="col-sm-3">Gender</dt>
    <dd class="col-sm-9">@Model.Gender</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PatientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
