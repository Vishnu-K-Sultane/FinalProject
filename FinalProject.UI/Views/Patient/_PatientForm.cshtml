@model FinalProject.UI.PatientDto

<div class="form-group mb-2">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="LastName"></label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="AadharId"></label>
    <input asp-for="AadharId" class="form-control" />
    <span asp-validation-for="AadharId" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="MobileNumber"></label>
    <input asp-for="MobileNumber" class="form-control" />
    <span asp-validation-for="MobileNumber" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Gender"></label>
    <select asp-for="Gender" class="form-control">
        <option value="">-- Select Gender --</option>
        <option>Male</option>
        <option>Female</option>
        <option>Other</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Disease"></label>
    <input asp-for="Disease" class="form-control" />
</div>

<div class="form-group mb-2">
    <label asp-for="Symptoms"></label>
    <input asp-for="Symptoms" class="form-control" />
</div>

<div class="form-group mb-2">
    <label asp-for="AdmissionDateTime"></label>
    <input asp-for="AdmissionDateTime" class="form-control" type="datetime-local" />
    <span asp-validation-for="AdmissionDateTime" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="InitialDeposit"></label>
    <input asp-for="InitialDeposit" class="form-control" type="number" step="0.01" />
    <span asp-validation-for="InitialDeposit" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="RoomId"></label>
    <input asp-for="RoomId" class="form-control" />
    <span asp-validation-for="RoomId" class="text-danger"></span>
</div>
