@page
@using FinalProject.UI.Pages.Departments
@model DeleteModel
@{
    ViewData["Title"] = "Delete Department";
}

<h2 class="text-danger">Are you sure you want to delete this department?</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Department.DeptName</h5>
        <p class="card-text"><strong>Head of Department:</strong> @Model.Department.HODName</p>
        <p class="card-text"><strong>Phone Extension:</strong> @Model.Department.PhoneExtensionNo</p>
    </div>
</div>

<form method="post" class="d-inline">
    <input type="hidden" asp-for="Department.DepartmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
