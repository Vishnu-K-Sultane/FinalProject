@page
@using FinalProject.UI.Pages.Departments
@model DeleteModel
@{
    ViewData["Title"] = "Delete Department";
}

<h2>Are you sure you want to delete this department?</h2>

<div>
    <strong>@Model.Department.DeptName</strong><br />
    <em>@Model.Department.HODName</em>
</div>

<form method="post">
    <input type="hidden" asp-for="Department.DepartmentId" />
    <button type="submit">Delete</button>
    <a asp-page="Index">Cancel</a>
</form>
