@page
@using FinalProject.UI.Pages.Departments
@model IndexModel
@{
    ViewData["Title"] = "Departments";
}

<h2 class="text-primary">Departments</h2>
<a class="btn btn-success mb-3" asp-page="CreateDepartment">➕ Add Department</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>HOD</th>
            <th>PhoneExtensionNo</th>
            <th>EmpaneledDoctorNames</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model.Departments)
        {
            <tr>
                <td>@dept.DepartmentId</td>
                <td>@dept.DeptName</td>
                <td>@dept.HODName</td>
                <td>@dept.PhoneExtensionNo</td>
                <td>@dept.EmpaneledDoctorNames</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="EditDepartment" asp-route-id="@dept.DepartmentId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="DeleteDepartment" asp-route-id="@dept.DepartmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
