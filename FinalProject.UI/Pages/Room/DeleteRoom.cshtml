@page
@using FinalProject.UI.Pages.Rooms
@model DeleteRoomModel
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<h4>Are you sure you want to delete this room?</h4>
<p>Room Number: @Model.Room.RoomNumber</p>

<form method="post">
    <input type="hidden" asp-for="RoomId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Room/Index" class="btn btn-secondary">Cancel</a>
</form>
